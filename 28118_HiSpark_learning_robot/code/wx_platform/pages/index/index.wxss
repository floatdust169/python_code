.container {
    display: block;
    flex-direction: column;
    height: 1800rpx;
    background: linear-gradient(135deg, #21cbf2, #0a4c8f);
    color: rgb(0, 0, 0);
    font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
    padding: 0rpx;
    margin: 0rpx;
}

/* bg对应的WXSS */
.page-container {
    position: relative;
    width: 100%;
}

.bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: -1;
    /* 确保背景在内容下方 */
}

.container {
    position: relative;
    /* 确保内容在背景上方 */
    z-index: 1;
}

/* 标题样式 */
.container .title {
    padding-top: 30rpx;
    font-size: 70rpx;
    font-weight: bold;
    text-align: center;
    width: 100%;
    display: block;
}

/* 状态行样式 */
.container .status-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 15px;
    margin-top: 50rpx;
}

/*状态行里面的图片*/
.status-row image {
    width: 90rpx;
    height: 90rpx;
}

/* 状态项样式 */
.status-item {
    display: flex;
    align-items: center;
}

/* 服务器状态样式 */
.server-status {
    margin-right: 30px;
}

/* 状态标签和值样式 */
.status-label {
    font-size: 16px;
}

.status-value {
    font-weight: bold;
}

.status-connected {
    color: #083d14;
}

.status-disconnected {
    color: #b91414;
}

.status-connecting {
    color: #fdcb6e;
}

.container .connect-btn {
    background-color: #10684a;
    color: white;
    border-radius: 8px;
    margin-top: 30rpx;
    font-weight: bold;
}

.connect-btn.connected {
    background-color: #c91919;
}

/* 环境监控区域 */
.container .control-section {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 20px;
    margin-top: 30px;
}

.control-head {
    display: inline-flex;
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 220rpx;
    margin-top: -20rpx;
}

.control-section .control-head image {
    width: 50rpx;
    height: 50rpx;
}

.environment-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 5px;
    margin-top: 5rpx;
}

.show_h {
    display: inline-flex;
    align-items: center;
}

.show_t {
    display: inline-flex;
    align-items: center;
}

.environment-row image {
    width: 90rpx;
    height: 90rpx;
}

/*todolist区域*/
.container .todolist-section {
    display: block;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 20px;
    margin-top: 20px;
    height: 600rpx;
    padding-top: 30rpx;
}

.todolist_top {
    display: inline-flex;
    align-items: center;
    height: 80rpx;
}

/*todolist标题*/
.todolist-title {
    flex-grow: 1;
    display: inline-flex;
    align-items: center;
    height: 100%;
}

.todolist-title image {
    width: 70rpx;
    height: 80rpx;
}

.todolist-title text {
    font-size: 40rpx;
    font-weight: bold;
    line-height: 1.2;
}

/* 按钮容器 */
.add-button {
    margin-left: 15rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 按钮容器 */
.clear-button {
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 清空按钮 */
.clear-button button {
    background: red;
    color: white;
    border-radius: 50%;
    padding: 0;
    width: 60rpx;
    margin-left: 20rpx;
}

/* 发送按钮 */
.send-button button {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    margin-left: 20rpx;
    color: white;
    width: 158rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

/* 显示切换 */
.switch-btn {
    display: flex;
    gap: 10rpx;
    /* 最小间距 */
    margin-left: 10rpx;
}

.view-btn {
    background: white;
    color: black;
    border-radius: 40rpx;
    font-size: 40rpx;

    /* 最小化内边距 */
    padding: 6rpx 15rpx !important;

    /* 完全自适应宽度 */
    width: auto !important;
    min-width: unset !important;

    box-sizing: border-box;
    white-space: nowrap;
    line-height: 1.5;
    text-align: center;
    border: none;
    margin: 0;
}

.view-btn.active {
    background: linear-gradient(135deg, #fc4903, #96c93d);
    /* 激活状态绿色渐变 */
    color: white !important;
    /* 文字颜色 */
    font-weight: 500;
    /* 加粗文字 */

    /* 添加立体效果 */
    box-shadow: 0 4rpx 12rpx rgba(0, 176, 155, 0.3);
    transform: translateY(-2rpx);

    /* 可选：添加边框强调 */
    border: 1rpx solid rgba(0, 176, 155, 0.5);
}

/* 添加按钮 */
.add-button button {
    background: linear-gradient(135deg, #00b09b, #96c93d);
    color: white;
    padding: 0;
    width: 60rpx;
    margin-left: 30rpx;
}

/* 按钮悬停效果 */
.send-button button:active,
.add-button button:active,
.clear-button button:active,
.view-btn:active {
    transform: translateY(4rpx);
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.12);
}

/* 按钮图标 */
.add-button button::before {
    font-size: 42rpx;
    font-weight: 300;
}

/* 输入区域样式 */
.input-area {
    margin-bottom: 40rpx;
}

.todo-input {
    width: 100%;
    height: 90rpx;
    padding: 0 25rpx;
    border-radius: 12rpx;
    border: 2rpx solid #e0e0e0;
    background-color: white;
    font-size: 32rpx;
}

.input-placeholder {
    color: #bfbfbf;
    font-size: 32rpx;
}

/*输入任务区*/
.task-list {
    flex: 1;
    position: relative;
    margin-top: 10rpx;
    overflow: hidden;
    /* 隐藏超出部分 */
}

.input-line button {
    width: 20rpx;
    display: flexbox;
    border-radius: 60rpx;
}

.clear image {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    /* 绝对定位 */
    top: 50%;
    /* 上边距50% */
    left: 50%;
    /* 左边距50% */
    transform: translate(-50%, -50%);
    /* 反向偏移自身50% */
    max-width: 80%;
    /* 限制图片尺寸 */
    max-height: 80%;
}

.input-line {
    display: inline-flex;
}

.input-line input {
    width: 520rpx;
}

/* 容器高度限制 */
.todolist-section {
    height: 600rpx;
    /* 保持固定高度 */
    display: flex;
    flex-direction: column;
    overflow: hidden;
    /* 隐藏内部溢出 */
}

/* 可滚动区域 */
.scroll-area {
    width: 100%;
    -webkit-overflow-scrolling: touch;
    /* 启用平滑滚动 */
}

.scroll-container {
    flex: 1;
    overflow: hidden;
}

/* 输入区域调整 */
.input-area {
    min-height: 100%;
    /* 确保内容不足时也能撑开 */
    padding-bottom: 20rpx;
    /* 留出底部空间 */
}

/*任务完成区*/
.empty-tasks {
    text-align: center;
    font-size: 50rpx;
}

.completed-task {
    background-color: white;
    border-radius: 16rpx;
    padding: 12rpx 0;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    /* 顶部对齐 */
    flex-direction: row;
}

.task-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
    /* 图标与文本间距 */
}

.text-container {
    display: flex;
    flex-direction: column;
    /* 垂直排列 */
}

/* 标签样式 */
.time-label {
    font-size: 28rpx;
    color: #666;
    min-width: 140rpx;
}

.task-name {
    font-size: 30rpx;
    color: black;
    line-height: 1.4;
}

.task-time {
    font-size: 30rpx;
    color: green;
    line-height: 1.4;
}

/* 通知区域 */
.container .notice {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 15px;
    margin-top: 30px;
}

.notice-head {
    display: inline-flex;
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 220rpx;
    margin-top: -20rpx;
}

.notice .notice-head image {
    width: 50rpx;
    height: 50rpx;
}

.text-container {
    width: 100%;
    display: flex;
    justify-content: center;
    /* 水平居中 */
    margin-top: 0rpx;
    /* 和标题保持间距 */
    padding: 3rpx;
    /* 内边距 */
    box-sizing: border-box;
}

.instruction {
    font-size: 28rpx;
    color: black;
    text-align: center;
    /* 文字居中 */
    line-height: 1.8;
    /* 行高 */
    white-space: pre-line;
    /* 保留换行符效果 */
}